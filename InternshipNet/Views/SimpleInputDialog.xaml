<Window x:Class="InternshipNet.Views.SimpleInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Width="350"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock x:Name="MessageText" Text="Enter Name:" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBox x:Name="InputTextBox" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="Ok_Click" IsDefault="True" Width="80" Background="#007ACC" Foreground="White" Height="30"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Margin="10,0,0,0" Height="30"/>
        </StackPanel>
    </StackPanel>
</Window>